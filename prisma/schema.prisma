generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  admin
  waiter
  cashier
  kitchen
}

model User {
  id        String   @unique @default(uuid())
  name      String
  email     String   @unique
  password  String
  role      Role     @default(waiter)
  createdAt DateTime @default(now())

  @@map("users")
}
